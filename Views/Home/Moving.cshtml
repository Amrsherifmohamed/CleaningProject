@model Move

<!-- Form Start -->
<div class="container-fluid py-5">
    <div class="container">
        <h1 class="mb-4 section-title">Service Request Form</h1>
        <form asp-action="CleaningSubmit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-bold text-white"></label>
                        <input asp-for="Name" class="form-control @(!ViewData.ModelState.IsValid ? "is-invalid" : "")" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="font-weight-bold text-white"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="font-weight-bold text-white"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold text-white"></label>
                        <input asp-for="Email" class="form-control @(!ViewData.ModelState.IsValid ? "is-invalid" : "")" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="font-weight-bold text-white"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SocialSecurityNumber" class="font-weight-bold text-white"></label>
                        <input asp-for="SocialSecurityNumber" class="form-control" placeholder="Enter your social security number" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="font-weight-bold text-white"></label>
                        <input asp-for="Date" class="form-control" type="date" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartTime" class="font-weight-bold text-white"></label>
                        <input asp-for="StartTime" class="form-control" type="time" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StreetAddress" class="font-weight-bold text-white"></label>
                        <input asp-for="StreetAddress" class="form-control" placeholder="Enter your street address" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ZipCode" class="font-weight-bold text-white"></label>
                        <input asp-for="ZipCode" class="form-control" placeholder="Enter your zip code" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="City" class="font-weight-bold text-white"></label>
                        <input asp-for="City" class="form-control" placeholder="Enter your city" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="State" class="font-weight-bold text-white"></label>
                        <input asp-for="State" class="form-control" placeholder="Enter your state" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SquareMeters" class="font-weight-bold text-white"></label>
                        <input asp-for="SquareMeters" class="form-control" placeholder="Enter square meters" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Residence" class="font-weight-bold text-white"></label>
                        <input asp-for="Residence" class="form-control" placeholder="Enter your residence" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Apartment" class="font-weight-bold text-white"></label>
                        <input asp-for="Apartment" class="form-control" placeholder="Enter your apartment" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="AdditionalInformation" class="font-weight-bold text-white"></label>
                        <textarea asp-for="AdditionalInformation" class="form-control" rows="4" placeholder="Enter additional information"></textarea>
                    </div>
                </div>
                <div class="col-md-12">
                    @* <div class="form-group">
                        <label asp-for="FileUpload" class="font-weight-bold text-white"></label>
                        <input asp-for="FileUpload" class="form-control-file" type="file" />
                    </div> *@
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary mt-3 py-2 px-4">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Form End -->
@section Scripts {
    @* Add any additional scripts needed for validation or other purposes *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
